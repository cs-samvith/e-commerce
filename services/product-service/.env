# Local development with real dependencies
SERVICE_NAME=product-service
SERVICE_PORT=8081

# PostgreSQL (running in Docker)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=products_db
DB_USER=postgres
DB_PASSWORD=postgres

# Redis (running in Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
CACHE_TTL=300

# RabbitMQ (running in Docker)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE=inventory.updates

# Disable mock mode (use real database)
MOCK_MODE=false