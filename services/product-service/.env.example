# Product Service Configuration
# Copy this file to .env and update values as needed

# Service Configuration
SERVICE_NAME=product-service
SERVICE_PORT=8081

# Database Configuration
DB_HOST=localhost
# DB_HOST=postgres-service  # Use this for K8s
DB_PORT=5432
DB_NAME=products_db
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
# REDIS_HOST=redis-service  # Use this for K8s
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=300

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
# RABBITMQ_HOST=rabbitmq-service  # Use this for K8s
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE=inventory.updates

# Observability
JAEGER_HOST=jaeger-service
JAEGER_PORT=6831

# Development/Testing
MOCK_MODE=false